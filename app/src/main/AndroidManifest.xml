<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="base.icq_killer" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClientActivity"
            android:label="@string/title_activity_client" >
        </activity>

        <service
            android:name=".ConnectService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".FileSelectActivity"
            android:label="@string/title_activity_file_select" >
        </activity>
        <activity
            android:name=".LogViewActivity"
            android:label="@string/title_activity_log_view" >
        </activity>
        <activity
            android:name=".DownloadDialog"
            android:label="@string/title_activity_download_dialog" >
        </activity>
    </application>

</manifest>
