<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="base.icq_killer.DownloadDialog">

    <TextView android:text="@string/downloadQuestion" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:id="@+id/userQuestion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/btnNo"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/userQuestion"
        android:layout_toLeftOf="@+id/userQuestion"
        android:layout_toStartOf="@+id/userQuestion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:id="@+id/btnYes"
        android:layout_alignTop="@+id/btnNo"
        android:layout_toRightOf="@+id/userQuestion"
        android:layout_toEndOf="@+id/userQuestion" />

</RelativeLayout>
